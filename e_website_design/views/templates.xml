<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <data>


    <template id="e_website_design.CatalogPage">
      <t t-call="website.layout">
          <div class="container py-5">
            <div class="row g-4 public-design-style justify-content-center">
                
                <div class="col-12 col-md-3 mb-4">
                  <a href="/catalog/designs" class="text-decoration-none">
                    <div class="card h-100 border-0 shadow-sm hover-shadow-lg transition-300">
                      <div class="card-body text-center py-5">
                        <i class="fa fa-paint-brush fa-5x text-success mb-4"></i>
                        <h3 class="card-title font-weight-bold text-dark">Designs</h3>
                      </div>
                    </div>
                  </a>
                </div>
                
                <div class="col-12 col-md-3 mb-4">
                  <a href="/catalog/categories" class="text-decoration-none">
                    <div class="card h-100 border-0 shadow-sm hover-shadow-lg transition-300">
                      <div class="card-body text-center py-5">
                        <i class="fa fa-folder-open fa-5x text-secondary mb-4"></i>
                        <h3 class="card-title font-weight-bold text-dark">Categories</h3>
                      </div>
                    </div>
                  </a>
                </div>

                <div class="col-12 col-md-3 mb-4">
                  <a href="/catalog/products" class="text-decoration-none">
                    <div class="card h-100 border-0 shadow-sm hover-shadow-lg transition-300">
                      <div class="card-body text-center py-5">
                        <i class="fa fa-cube fa-5x text-primary mb-4"></i>
                        <h3 class="card-title font-weight-bold text-dark">Products</h3>
                      </div>
                    </div>
                  </a>
                </div>
            </div>
        </div>
      </t>
    </template>
    
    <template id="e_website_design.CatalogProducts">
      <t t-call="website.layout">
          <div class="container py-5">
            <t t-call="e_website_design.breadcrumbComponent"/>
            <div id="listjs-search-component" class="row g-4 public-design-style">
                <div class="row my-2 justify-content-end">
                  <div class="col-12 col-sm-6">
                    <t t-call="e_website_design.listJsSearchComponent">
                      <t t-set="list_js_id" t-value="'listjs-search-component'"/>
                      <t t-set="list_js_valueNames" t-value="['listjs-name', 'listjs-default-code']" />
                    </t>
                  </div>
                </div>
                <div class="list">
                  <t t-foreach="products" t-as="product">
                      <a style="text-decoration: none;" t-attf-href="/catalog/designs?pid={{product.id}}">
                        <div class="col-12">
                            <div class="card h-100">
                                <img t-if="product.image_1920"
                                    t-attf-src="/web/image/product.template/#{product.id}/image_1920"
                                    class="card-img-top"
                                    t-att-alt="product.name"/>
                                <div t-else="" class="card-img-top d-flex align-items-center justify-content-center bg-light">
                                    <i class="fa fa-image text-muted" style="font-size: 3rem;"></i>
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title fw-bold text-truncate">
                                        
                                        <span class="listjs-default-code" t-if="product.default_code">
                                          [<t t-esc="product.default_code"/>]
                                        </span>
                                        
                                        <span class="listjs-name" t-esc="product.name"/>
                                    </h5>
                                    <div class="card-text flex-grow-1 text-muted">
                                      <t t-esc="product.design_counter"/> Designs
                                    </div>
                                </div>
                            </div>
                        </div>
                      </a>
                  </t>
                </div>
            </div>
        </div>
        
      </t>
    </template>

    <template id="e_website_design.CatalogCategories">
      <t t-call="website.layout">
          <div class="container py-5">
            <t t-call="e_website_design.breadcrumbComponent"/>
            <div id="listjs-search-component" class="row g-4 public-design-style">
                <div class="row my-2 justify-content-end">
                  <div class="col-12 col-sm-6">
                    <t t-call="e_website_design.listJsSearchComponent">
                      <t t-set="list_js_id" t-value="'listjs-search-component'"/>
                      <t t-set="list_js_valueNames" t-value="['listjs-name']" />
                    </t>
                  </div>
                </div>
                <div class="list">
                  <t t-foreach="categories" t-as="category">
                      <a style="text-decoration: none;" t-attf-href="/catalog/designs?cid={{category.id}}">
                        <div class="col-12">
                            <div class="card h-100">
                                <img t-if="category.image"
                                    t-attf-src="/web/image/product.template/#{category.id}/image"
                                    class="card-img-top"
                                    t-att-alt="product.name"/>
                                <div t-else="" class="card-img-top d-flex align-items-center justify-content-center bg-light">
                                    <i class="fa fa-image text-muted" style="font-size: 3rem;"></i>
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title fw-bold text-truncate listjs-name">
                                        <t t-esc="category.name"/>
                                    </h5>
                                    <div class="card-text flex-grow-1 text-muted">
                                    <t t-esc="category.design_counter"/> Designs
                                    </div>
                                </div>
                            </div>
                        </div>
                      </a>
                  </t>
                </div>
            </div>
        </div>
      </t>
    </template>
    
    <template id="e_website_design.CatalogDesigns">
      <t t-call="website.layout">
          <div class="container py-3">
            <t t-call="e_website_design.breadcrumbComponent"/>
            <t t-call="e_website_design.loaderComponent"/>
              <owl-component 
                name="e_website_design.CatalogDesignsComponent"
                t-att-props='controller_context'
            />
          </div>
          
      </t>
    </template>
    
    <template id="designLayout" inherit_id="website.layout">
        <xpath expr="//head/link[last()]" position="after">
          <link rel="stylesheet" href="/e_website_design/static/src/lib/fancybox/fancybox.css"/>
        </xpath>
        <xpath expr="//script[@id='web.layout.odooscript']" position="after">
          <script src="/e_website_design/static/src/lib/fancybox/fancybox.js"></script>
        </xpath>
    </template>

    <template id="e_website_design.CatalogDesign">
      <t t-call="e_website_design.designLayout">
        <div class="container py-4">
            <t t-call="e_website_design.breadcrumbComponent"/>
            <div class="row g-4 catalog-design">
              <div class="col-lg-6">
                <div class="design-gallery">
                  <a href="#" data-fancybox="gallery" t-attf-data-src="/web/image/product.design/#{design.id}/image" 
                    class="d-block mb-3">
                    <img t-attf-src="/web/image/product.design/#{design.id}/image" t-att-alt="design.name" 
                        class="img-fluid rounded-3 shadow-lg w-100" 
                        style="max-height: 500px; object-fit: contain;"/>
                  </a>
                  
                
                  <div class="row justify-content-center thumbnails-grid" t-if="design.attachment_ids">
                    <t t-foreach="design.attachment_ids" t-as="img">
                      <a href="#" data-fancybox="gallery" t-attf-data-src="/web/content/#{img.id}"
                        class="col-2 d-inline-block me-2 mb-2">
                        <img t-attf-src="/web/content/#{img.id}" 
                            class="rounded-2 border w-100" 
                            style="aspect-ratio: 1; object-fit: cover;"/>
                      </a>
                    </t>
                  </div>
                </div>
              </div>
              
              <div class="col-lg-6">
                <div class="design-header mb-4">
                  <span class="badge bg-dark text-uppercase fs-6 px-3 py-2" 
                        t-if="design.default_code" t-out="design.default_code"/>
                  <h1 class="display-4 fw-bold mt-3 mb-0" t-out="design.name"/>
                </div>
                
                <!-- <div class="design-tags mb-4" t-if="design.tag_ids">
                  <t t-foreach="design.tag_ids" t-as="tag">
                    <span class="badge bg-primary me-1" t-out="tag.name"/>
                  </t>
                </div> -->
                
                <!-- <div class="design-description mb-4" t-if="design.description">
                  <h5 class="fw-semibold mb-3">Descripci√≥n</h5>
                  <div class="card border-0 bg-light">
                    <div class="card-body" t-out="design.description"/>
                  </div>
                </div> -->
                
                <div class="design-actions">
                  <button class="btn btn-primary btn-lg px-4 me-2">
                    <i class="fa fa-download me-2"/> Descargar
                  </button>
                  <button class="btn btn-outline-secondary btn-lg px-4">
                    <i class="fa fa-share me-2"/> Compartir
                  </button>
                </div>
              </div>
            </div>
        </div>
        
        <script>
          document.addEventListener('DOMContentLoaded', function() {
            Fancybox.bind('[data-fancybox="gallery"]', {
              Toolbar: {
                display: [
                  { id: "counter", position: "center" },
                  "zoom",
                  "fullscreen",
                  "close",
                ],
              },
            });
          });
        </script>
      </t>
    </template>
    
  </data>
</odoo>