<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <data>

    <template id="loaderComponent">
      <div class="position-relative">
        <div class="row align-items-center loader-component text-center">
            <div class="col">
                <div class="spinner-border text-primary" role="status">
                    <span class="sr-only"></span>
                </div>
            </div>
        </div>
      </div>
    </template>

    <template id="breadcrumbComponent">
        <div class="d-flex align-items-center mb-2" t-if="breadcrumbs_context">
            <a t-att-href="breadcrumbs_context['back_url']" class="me-3">
                <i class="fa fa-arrow-circle-left fa-2x back-arrow"></i>
            </a>
            <nav aria-label="breadcrumb" class="flex-grow-1">
            <ol class="breadcrumb breadcrumb-custom mb-0">
                <t t-foreach="breadcrumbs_context['breadcrumbs']" t-as="breadcrumb">
                    <t t-if="not breadcrumb_first">
                        <span class="mx-2">/</span>
                    </t>
                    <li class="breadcrumb-item" t-att-class="{active:breadcrumb_last}">
                        <a t-if="breadcrumb['href']" t-att-href="breadcrumb['href']" t-esc="breadcrumb['name']"></a>
                        <t t-else="" t-esc="breadcrumb['name']"/>
                    </li>
                </t>
            </ol>
            </nav>
        </div>
    </template>

    <template id="e_website_design.CatalogProducts">
      <t t-call="website.layout">
          <div class="container py-5">
            <div class="row g-4 public-design-style">
                <t t-foreach="products" t-as="product">
                    <a style="text-decoration: none;" t-attf-href="/catalog/product/#{product.id}">
                    <div class="col-12">
                        <div class="card h-100">
                            <img t-if="product.image_1920"
                                t-attf-src="/web/image/product.template/#{product.id}/image_1920"
                                class="card-img-top"
                                t-att-alt="product.name"/>
                            <div t-else="" class="card-img-top d-flex align-items-center justify-content-center bg-light">
                                <i class="fa fa-image text-muted" style="font-size: 3rem;"></i>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold text-truncate">
                                    <t t-if="product.default_code">
                                    [<t t-esc="product.default_code"/>]
                                    </t>
                                    <t t-esc="product.name"/>
                                </h5>
                                <div class="card-text flex-grow-1 text-muted">
                                <t t-esc="product.design_counter"/> Designs
                                </div>
                            </div>
                        </div>
                    </div>
                    </a>
                </t>
            </div>
        </div>
      </t>
    </template>
    
    
    <template id="e_website_design.CatalogDesigns">
      <t t-call="website.layout">
          <div class="container py-3">
            <t t-call="e_website_design.breadcrumbComponent"/>
            <t t-call="e_website_design.loaderComponent"/>
              <owl-component 
                name="e_website_design.CatalogDesignsComponent"
                t-att-props='controller_context'
            />
          </div>
          
      </t>
    </template>
    
    <template id="e_website_design.CatalogDesign">
      <t t-call="website.layout">
          <div class="container py-3">
            <t t-call="e_website_design.breadcrumbComponent"/>
            <t t-esc="object.name"/>
          </div>
      </t>
    </template>
    
  </data>
</odoo>