<templates id="template" xml:space="preserve">
    <t t-name="e_design_pos.Orderline" t-inherit="point_of_sale.Orderline" t-inherit-mode="extension">
       <xpath expr="//div[hasclass('product-name')]" position="inside">
            <small t-if="this.props.line.design_id?.name" class="text-muted fst-italic">
