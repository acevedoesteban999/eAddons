<templates xml:space="preserve">
    <t t-name="ir_module_e_translate.PotTranslationDialog">
        <div class="container-fluid">
            <table class="table table-hover table-equal-rows">
                <thead>
                    <tr>
                        <t t-foreach="Object.keys(this.state.datas)" t-as="lang" t-key="lang">
                            <th t-esc="lang"/>
                        </t>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="firstLang" t-value="Object.keys(this.state.datas)[0]"/>
                    <t t-if="firstLang" t-foreach="Object.keys(this.state.datas[firstLang].data)" t-as="key" t-key="key">
                        <tr>
                            <t t-foreach="Object.entries(this.state.datas)" t-as="lang" t-key="lang[0]">
                                <td>
                                    <span t-if="lang[1].readonly" class="d-block" style="max-width: 300px;" t-esc="lang[1].data[key]"/>
                                    <input t-else="" 
                                        type="text" 
                                        class="form-control form-control-sm" 
                                        t-att-value="lang[1].data[key] or ''" 
                                        />
                                </td>
                            </t>
                        </tr>
                    </t>
                </tbody>
            </table>
        </div>
    </t>
</templates>