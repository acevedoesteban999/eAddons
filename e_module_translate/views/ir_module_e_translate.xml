<?xml version="1.0" encoding="utf-8"?>
<odoo>

   
    <record id="view_ir_module_e_translate_list" model="ir.ui.view">
        <field name="name">view.ir_module.e_translate.list</field>
        <field name="model">ir.module.e_translate</field>
        <field name="inherit_id" ref="e_module_base.view_ir_module_e_base_list"></field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <list position="inside">
                <field name="has_translations"></field>
            </list>
        </field>
    </record>

    <record id="view_ir_module_e_translate_form" model="ir.ui.view">
        <field name="name">view.ir_module.translate.form</field>
        <field name="model">ir.module.e_translate</field>
        <field name="inherit_id" ref="e_module_base.view_ir_module_e_base_form"></field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='module_name']" position="after">
                <field name="has_translations"></field>
                <field name="translations" invisible="not has_translations" ></field>
            </xpath>
        </field>
    </record>

    <record id="action_ir_module_e_translate" model="ir.actions.act_window">
        <field name="name">eTranslations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ir.module.e_translate</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Ir_module Translate.
            </p>
        </field>
    </record>

</odoo>
